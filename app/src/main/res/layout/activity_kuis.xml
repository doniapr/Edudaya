<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.don.edudaya.KuisActivity">
    <LinearLayout
        android:id="@+id/tmptSoal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/outSoal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#e9e9e9"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tmptPilihanJawaban"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/tmptSoal"
        android:padding="10dp"
        android:layout_margin="10dp">

        <RadioGroup
            android:id="@+id/outPilihanJawaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/outPilihanJawaban1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/outPilihanJawaban2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/outPilihanJawaban3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnJawab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmptPilihanJawaban"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="#00ff00"
        android:text="JAWAB"/>
</RelativeLayout>
